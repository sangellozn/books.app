<div>
    <h1>Ajout / modification d'une Saga</h1>
    <form name="form_saga">
        <div class="form-group">
            <label for="nom">Nom :</label> 
            <input type="text" class="form-control" id="nom" name="nom" placeholder="Nom de la saga"
                 ng-model="saga.nom" ng-required="true" />
        </div>
        <a href="#/sagas" class="btn btn-info">Retour</a>
        <button type="submit" class="btn btn-primary" ng-disabled="form_saga.$invalid" ng-click="validate()">Valider</button>
    </form>
</div>