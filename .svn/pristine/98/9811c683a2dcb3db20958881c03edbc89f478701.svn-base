package info.san.biblio.app.query;

import info.san.biblio.app.model.entry.SerieEntry;

/**
 * Query repository for SerieEntry.
 *
 * @author ANGELLOZ-NICOUD SÃ©bastien
 */
public class SerieQueryRepository extends AbstractBasicQueryRepository<SerieEntry> {

	public SerieQueryRepository() {
		super(SerieEntry.class);
	}

	public boolean isNameExists(String name) {
		return ((Number) this.em.createNamedQuery("SerieEntry.countByName").setParameter("name", name).getSingleResult()).intValue() > 0;
	}

}
