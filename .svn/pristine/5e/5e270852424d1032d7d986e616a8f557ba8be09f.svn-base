package info.san.biblio.app.rest;

import info.san.biblio.app.rest.exceptionmapper.AggregateNotFoundExceptionMapper;
import info.san.biblio.app.rest.exceptionmapper.NameAlreadyTakenExceptionMapper;

import java.util.HashSet;
import java.util.Set;

import javax.ws.rs.ApplicationPath;
import javax.ws.rs.core.Application;

import com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider;

/**
 * REST application.
 */
@ApplicationPath("rest")
public class RestApplication extends Application {

	@Override
	public Set<Class<?>> getClasses() {
		Set<Class<?>> classes = new HashSet<>();

		classes.add(AuteurRest.class);
		classes.add(LivresRest.class);
		classes.add(SagaRest.class);

		return classes;
	}

	@Override
	public Set<Object> getSingletons() {
		Set<Object> instances = new HashSet<>();

		instances.add(new JacksonJsonProvider());
		instances.add(new NameAlreadyTakenExceptionMapper());
		instances.add(new AggregateNotFoundExceptionMapper());

		return instances;
	}

}
